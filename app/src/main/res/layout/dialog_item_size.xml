<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="20dp"
                  android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="24sp"
                  android:textStyle="bold"
                  android:text="화물 종류 설정"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="크기와 무게를 적어주세요"
                  android:textSize="20sp"
                  android:textColor="@color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="정확한 가격을 설정하지 않으면\n불이익이 있을 수 있습니다"
                  android:textSize="18sp"
                  android:textColor="@color/white"/>
    </LinearLayout>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/sizeEt"
              android:background="@drawable/back_et"
              android:padding="5dp"
              android:textSize="18sp"
              android:inputType="numberSigned"
              android:hint="크기 입력(가로+세로+높이)cm"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="15dp"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/weightEt"
              android:background="@drawable/back_et"
              android:padding="5dp"
              android:inputType="numberSigned"
              android:textSize="18sp"
              android:hint="무게 입력(Kg)"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="15dp"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/confirmSizeBtn"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:text="확인"/>

</LinearLayout>
